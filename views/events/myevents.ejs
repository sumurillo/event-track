<%- include('../partials/header') %>

<h1>My Events</h1>

<table>
  <thead>
    <tr>
        <th>Event Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
    </tr>    
  </thead>
  <tbody>
    <% events.forEach(function(e) { %>
        <tr>
        <form action="/events/<%=e.id%>?_method=PUT" METHOD="POST">
            <input name="title" value="<%= e.title %>">
            <input name="date" value="<%= e.date %>">
            <input name="description" value="<%= e.description %>">
            <input name="location" value="<%= e.location %>">
            <button type="submit">Update Event</button>
        </form>
        <form action="/myevents/<%= e.id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
        </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>