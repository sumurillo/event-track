<%- include('../partials/header') %>

<h1>Create Event</h1>
<form action="/new/event" method="POST">
    <label>Event Title(required):
        <br><input type="text" name="title">
    </label><br>
    <label>Date(required):
        <br><input type="date" name="date">
    </label><br>
    <label>Location(required):
        <br><input type="text" name="location">
    </label><br>
    <label>Description(required):
        <br><input type="text" name="description" placeholder="include details here">
    </label><br>
    <button type="submit">Add Event</button>
</form>

